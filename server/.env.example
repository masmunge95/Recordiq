# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL (for Clerk authorized parties and redirects)
FRONTEND_URL=http://localhost:5173

# Database
MONGO_URI=mongodb://localhost:27017/recordiq

# Clerk Authentication (get from https://dashboard.clerk.com/)
CLERK_SECRET_KEY=sk_test_your_secret_key_here
CLERK_WEBHOOK_SECRET_LOCAL=whsec_your_webhook_secret_here # Local development webhook secret
CLERK_WEBHOOK_SECRET_PUBLISHED=whsec_your_published_webhook_secret_here # Published webhook secret

# CORS - Comma-separated list of allowed origins (production URLs)
# Example: CORS_ALLOWED_ORIGINS=https://your-app.vercel.app,https://recordiq.com
CORS_ALLOWED_ORIGINS=

# Azure Computer Vision (for OCR on images/photos)
AZURE_COMPUTER_VISION_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_COMPUTER_VISION_KEY=your_azure_key_here

# Azure Document Intelligence (for structured documents like invoices/forms)
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_DOCUMENT_INTELLIGENCE_KEY=your_azure_key_here

# IntaSend Payment Provider (optional - for M-Pesa integration)
INTASEND_PUBLISHABLE_KEY=ISPubKey_test_your_key
INTASEND_SECRET_KEY=ISSecretKey_test_your_key
INTASEND_CHALLENGE_TOKEN=your_challenge_token_here
# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
