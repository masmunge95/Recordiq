# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGO_URI=mongodb://localhost:27017/recordiq

# Clerk Authentication (get from https://dashboard.clerk.com/)
CLERK_SECRET_KEY=sk_test_your_secret_key_here

# CORS - Comma-separated list of allowed origins (production URLs)
# Example: CORS_ALLOWED_ORIGINS=https://your-app.vercel.app,https://recordiq.com
CORS_ALLOWED_ORIGINS=

# Azure Computer Vision (for OCR)
AZURE_COMPUTER_VISION_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_COMPUTER_VISION_KEY=your_azure_key_here

# IntaSend Payment Provider (optional - for M-Pesa integration)
INTASEND_PUBLISHABLE_KEY=ISPubKey_test_your_key
INTASEND_SECRET_KEY=ISSecretKey_test_your_key
INTASEND_API_URL=https://sandbox.intasend.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
